{
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "air": "readonly",
    "game": "readonly",
    "debug": "readonly",
    "loca": "readonly",
    "assets": "readonly",
    "reloadScripts": "readonly",
    "getImage": "readonly",
    "createSwitch": "readonly",
    "Modal": "readonly",
    "AdventureManager": "readonly",
    "aBuff": "readonly",
    "armyGetChecksum": "readonly",
    "armyGetSpecialistFromID": "readonly",
    "armyInfo": "readonly",
    "armyLoadDataCheck": "readonly",
    "armyPacketMatches": "readonly",
    "armySendGeneralToStar": "readonly",
    "armyServices": "readonly",
    "armySPECIALIST_TYPE": "readonly",
    "armySpecTaskDef": "readonly",
    "armySpecTravelDef": "readonly",
    "attacking": "readonly",
    "aWindow": "readonly",
    "battleLoadDataCheck": "readonly",
    "battlePacket": "readonly",
    "createExplorerDropdown": "readonly",
    "createModalWindow": "readonly",
    "createTableRow": "readonly",
    "dRaiseArmyVODef": "readonly",
    "dResourceVODef": "readonly",
    "file": "readonly",
    "fileName": "readonly",
    "getImageTag": "readonly",
    "getText": "readonly",
    "globalFlash": "readonly",
    "hash": "readonly",
    "i": "readonly",
    "itemString": "readonly",
    "mainSettings": "readonly",
    "menu": "readonly",
    "MenuItem": "readonly",
    "moving": "readonly",
    "process": "readonly",
    "rawArgs": "readonly",
    "readSettings": "readonly",
    "settings": "readonly",
    "shortcutsFreeAllUnits": "readonly",
    "shortcutsMoveElement": "readonly",
    "showGameAlert": "readonly",
    "specGetTypesForType": "readonly",
    "specNameSorter": "readonly",
    "specSettingsTemplates": "readonly",
    "specType": "readonly",
    "thisValue": "readonly",
    "travelling": "readonly",
    "trueAmount": "readonly",
    "updateApplication": "readonly",
    "updateFreeArmyInfo": "readonly",
    "utils": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "rules": {
    "no-console": "warn",
    "no-undef": "error",
    "no-unused-vars": "warn",
    "no-const-assign": "off",
    "prefer-const": "off",
    "no-var": "off",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "SpreadElement",
        "message": "Spread operator (...) is not supported in Adobe AIR. Use Array.prototype.slice.call() or Function.apply() instead."
      },
      {
        "selector": "RestElement",
        "message": "Rest parameters (...args) are not supported in Adobe AIR. Use Array.prototype.slice.call(arguments) instead."
      },
      {
        "selector": "TemplateLiteral",
        "message": "Template literals are not supported in Adobe AIR. Use string concatenation instead."
      },
      {
        "selector": "ArrowFunctionExpression",
        "message": "Arrow functions are not supported in Adobe AIR. Use function expressions instead."
      }
    ]
  }
}
